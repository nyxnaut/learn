/**/bool switchState {};const char SWITCH {2}, GREEN {3}, L_RED {4}, R_RED {5};void setup() {  pinMode(SWITCH, INPUT);  // switch  pinMode(GREEN, OUTPUT); // red led  pinMode(L_RED, OUTPUT); // red led  pinMode(R_RED, OUTPUT); // green led}void loop() {    switchState = digitalRead(2);        if(switchState == LOW) {      digitalWrite(GREEN, HIGH);      digitalWrite(L_RED, LOW);      digitalWrite(R_RED, LOW);    } else {      digitalWrite(GREEN, LOW);      digitalWrite(L_RED, LOW);      digitalWrite(R_RED, HIGH);            delay(250);            digitalWrite(L_RED, HIGH);      digitalWrite(R_RED, LOW);            delay(250);    }}